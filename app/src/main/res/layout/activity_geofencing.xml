<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Geofencing">


    <include layout="@layout/item_usuario"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lat"
            android:textColor="#ffffff"
            android:layout_weight="0.5"
            android:text="Lat:"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lon"
            android:textColor="#ffffff"
            android:layout_weight="0.5"
            android:text="Long:"
            />

    </LinearLayout>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:src="@drawable/icon_objects"
            app:backgroundTint="@color/colorBlanco"
            android:layout_margin="16dp"
            app:fabSize="normal"
            app:maxImageSize="40dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_faces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end|left"
            android:src="@drawable/ic_group_collapse_05"
            app:backgroundTint="@color/colorBlanco"
            android:layout_margin="16dp"
            app:fabSize="normal"
            app:maxImageSize="40dp" />

    </fragment>

</LinearLayout>